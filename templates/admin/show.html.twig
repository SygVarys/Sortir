{#            <td>{{ user.pseudo }}</td>#}
{#        </tr>#}
        </tbody>
    </table>

    <div style="display: flex;flex-wrap: nowrap;justify-content: space-evenly;">

        <a href="{{ path('app_admin_liste') }}" class="btn btn-primary">retour à la liste</a>

        <a href="{{ path('app_admin_edit', {'id': user.id}) }}" class="btn btn-info">éditer</a>

        <a href="{{ path('app_admin_delete', {'id': user.id}) }}" class="btn btn-danger">supprimer</a>
    </div>

{% endblock %}