
{% extends 'base.html.twig' %}

{% block title %}profil{% endblock %}

{% block body %}

    <h1 class="h3 mb-3 font-weight-normal">Profil</h1>
    <form method="post">
        <div class="mb-3">
            {{ form_errors(userForm) }}
        </div>

        {{ form_start(userForm) }}

        <div class="mb-3">
            <label for="inputNom" class="form-label">Nom</label>
            {{ form_widget(userForm.nom, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            <label for="inputPrenom" class="form-label">Prénom</label>
            {{ form_widget(userForm.prenom, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            <label for="inputEmail" class="form-label">Email</label>
            {{ form_widget(userForm.email, {'attr': {'class': 'form-control', 'autocomplete': 'email'}}) }}
        </div>

        <div class="mb-3">
            <label for="inputTelephone" class="form-label">Téléphone</label>
            {{ form_widget(userForm.telephone, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            <label for="inputPassword" class="form-label">Mot de passe</label>
            {{ form_widget(userForm.password, {'attr': {'class': 'form-control'}}) }}
        </div>


        <div >
            {% if user.poster is not empty %}
                <img src="{{ asset('public/img/avatar/' ~ user.poster) }}">
            {% endif %}
        </div>


        <button type="submit" class="btn btn-lg btn-primary">Modifier</button>
        {{ form_end(userForm) }}
    </form>




    <form method="post" action="{{ path('user_update', {'id': user.id}) }}">
        <button type="submit" class="btn btn-secondary">annuler</button>
    </form>


{% endblock %}