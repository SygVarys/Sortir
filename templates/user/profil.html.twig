
{% extends 'base.html.twig' %}

{% block title %}profil{% endblock %}

{% block body %}

    <h1 class="h3 mb-3 font-weight-normal">Mon profil : </h1>

    <div class="mise" style="display: flex; align-items: center; gap: 20px; white-space: nowrap;justify-content: center ">

        <div style=" display:flex;">
            {% if user.poster is not empty %}
                <img src="{{ asset('uploads/img/avatar/' ~ user.poster) }}">
            {% endif %}
        </div>

        <div class="mb-3">
            {{ form_errors(userForm) }}
        </div>



        {{ form_start(userForm) }}

        <div class="mb-2 d-flex align-items-center ">
            <label for="inputNom" class="form-label">Nom :</label>
            {{ form_widget(userForm.nom, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-2 d-flex align-items-center">
            <label for="inputPrenom" class="form-label">Prénom :</label>
            {{ form_widget(userForm.prenom, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-2 d-flex align-items-center">
            <label for="inputPseudo" class="form-label">Pseudo :</label>
            {{ form_widget(userForm.pseudo, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-2 d-flex align-items-center">
            <label for="inputEmail" class="form-label">Email :</label>
            {{ form_widget(userForm.email, {'attr': {'class': 'form-control', 'autocomplete': 'email'}}) }}
        </div>

        <div class="mb-2 d-flex align-items-center">
            <label for="inputTelephone" class="form-label">Téléphone :</label>
            {{ form_widget(userForm.telephone, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-2 d-flex align-items-center">
{#            {{ form_label(userForm.site) }}#}
            <label for="inputVille" class="form-label">Ville :</label>
            {{ form_widget(userForm.site, {'attr': {'class': 'form-select'}}) }}
        </div>


        <div class="mb-2 d-flex align-items-center">
            <label for="inputPoster_file" class="form-label">Ma photo :</label>
            <span class=" ">{{ form_widget(userForm.poster_file, {'attr': {'class': 'form-control'}}) }}</span>
        </div>





        <button type="reset" class="btn btn-primary"  value="Reset">Annuler</button>


        <input class="btn btn-primary" type="submit" value="Enregistrer">

    </div>



    {{ form_end(userForm) }}



{% endblock %}