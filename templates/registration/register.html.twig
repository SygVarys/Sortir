{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <h1 class="h3 mb-3 font-weight-normal">Register</h1>
    <form method="post">
        <div class="mb-3">
            {{ form_errors(registrationForm) }}
        </div>

        {{ form_start(registrationForm) }}

        <div class="mb-3">
            <label for="inputNom" class="form-label">Nom</label>
            {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            <label for="inputPrenom" class="form-label">Prénom</label>
            {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            <label for="inputEmail" class="form-label">Email</label>
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'autocomplete': 'email'}}) }}
        </div>

        <div class="mb-3">
            <label for="inputTelephone" class="form-label">Téléphone</label>
            {{ form_widget(registrationForm.telephone, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            <label for="inputPassword" class="form-label">Mot de passe</label>
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'autocomplete': 'new-password'}}) }}
        </div>

        <div class="mb-3"  >
            {{ form_label(registrationForm.site) }}
            {{ form_widget(registrationForm.site) }}
        </div>



        <button type="submit" class="btn btn-lg btn-primary">S'enregistrer</button>
        {{ form_end(registrationForm) }}
    </form>

{% endblock %}
